<h2 class="ui center aligned large header">
  Welcome to Real Time Rails - <em>a complete Chat App</em>
</h2>

<h4 class="ui center aligned medium icon header">
  <i class="circular orange power off tiny icon"></i>
  Sign Up to continue
</h4>

<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
   <div class="middle aligned column">
      <div class="ui big orange button">
        <i class="signup icon"></i>
        <%= link_to "Log In", login_path %>
      </div>
    </div>
    <div class="column">
      <%= form_for(@user, html: {class: "ui form", role: "form"}) do |f| %>
        <div class="field">
          <%= f.label :username, "Username" %>
          <div class="ui left icon input">
            <%= f.text_field :username, placeholder: "Username" %>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <%= f.label :password, "Password" %>
          <div class="ui left icon input">
            <%= f.password_field :password, placeholder: "Password" %>
            <i class="lock icon"></i>
          </div>
        </div>
        <div class="field">
          <%= f.label :password_confirmation, "Password Confirmation" %>
          <div class="ui left icon input">
            <%= f.password_field :password_confirmation, placeholder: "Password Confirmation" %>
            <i class="lock icon"></i>
          </div>
        </div>
        <%= f.button "Sign Up", class: "ui orange submit button" %>
      <% end %>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>
